{
  "name": "wallets-sync",
  "description": "A service that monitor the completed requests queue, and checks for completed Wallet Issuance requests. If it finds a successful completed request, it adds the newly created wallet address to the wallets db.",
  "version": "1.0.0",
  "engines": {
    "node": ">=8.9.2"
  },
  "scripts": {
    "start": "nodemon $NODE_DEBUG_OPTION -e js . | pino",
    "serve": "node .",
    "serve:trace": "node --stack_trace_limit=50 -r trace -r clarify .",
    "lint": "eslint -c ../../.eslintrc.yml .",
    "lint:fix": "prettier-eslint --write \"src/**/*.js\" && eslint src"
  },
  "main": "src/index.js",
  "dependencies": {
    "@welldone-software/node-toolbelt": "^1.4.0",
    "app-module-path": "^2.2.0",
    "clarify": "^2.1.0",
    "lodash": "^4.17.5",
    "promise-serial": "^0.1.5",
    "require-all": "^2.2.0",
    "stox-bc-wallet-common": "1.0.0",
    "stox-common": "git@bitbucket.org:stx_site/stox-common.git#dev",
    "trace": "^3.1.0",
    "web3": "^1.0.0-beta.33"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^5.9.0",
    "chai": "^4.1.2",
    "chai-jest-diff": "^1.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "nodemon": "^1.12.1",
    "pino": "^4.15.3",
    "prettier": "^1.7.4",
    "prettier-eslint": "^8.2.1",
    "prettier-eslint-cli": "^4.4.0"
  }
}
