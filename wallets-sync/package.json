{
  "name": "wallets-sync",
  "description": "A service that monitor the completed requests queue, and checks for completed Wallet Issuance requests. If it finds a successful completed request, it adds the newly created wallet address to the wallets db.",
  "version": "1.0.0",
  "engines": {
    "node": ">=8.9.2"
  },
  "scripts": {
    "start": "nodemon -e js . | pino",
    "serve": "node .",
    "lint": "eslint -c ../.eslintrc.yml .",
    "lint:fix": "prettier-eslint --write \"src/**/*.js\" && eslint src",
    "jest:integration": "jest"
  },
  "main": "src/index.js",
  "dependencies": {
    "@welldone-software/node-toolbelt": "^1.2.0",
    "app-module-path": "^2.2.0",
    "lodash": "^4.17.4",
    "require-all": "^2.2.0",
    "stox-bc-wallet-common": "file:../common",
    "stox-common": "git+https://bitbucket.org/stx_site/stox-common.git#dev",
    "web3": "^1.0.0-beta.30"
  },
  "devDependencies": {
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.2.1",
    "nodemon": "^1.14.7",
    "prettier": "^1.7.4",
    "prettier-eslint": "^8.7.0",
    "prettier-eslint-cli": "^4.7.0"
  }
}
